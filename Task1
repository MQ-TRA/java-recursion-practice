import java.util.Arrays;
import java.util.List;

public class Task1 {
    public static void main(String[] args) {
        List<Integer> numbers = Arrays.asList(10, 30, 50, 70, 90);
        int totalSum = 0;

        System.out.println("Calculating sum using a recursive function...");
        totalSum = calculateSumRecursive(numbers, 0);//to calc the total sum once the Rec. is over.

        System.out.println("--------------------------");
        System.out.println("The final sum is: " + totalSum);
    }

    public static int calculateSumRecursive(List<Integer> nums, int currentIndex) {

        if (currentIndex >= nums.size()) {
            return 0;
        } else {
            return nums.get(currentIndex) + calculateSumRecursive(nums, currentIndex + 1);
        }
    }
}

